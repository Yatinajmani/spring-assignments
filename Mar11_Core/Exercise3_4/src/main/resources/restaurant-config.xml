<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean class="Tea" id="tea">
        <property name="name" value="Chai"/>
    </bean>

    <bean class="ExpressTea" id="expressTea">
        <property name="name" value="ExpressChai"/>
    </bean>

    <bean class="Restaurant" id="teaRestaurant">
        <property name="hotDrink" ref="tea"/>
    </bean>

    <alias name="teaRestaurant" alias="restaurant"/>

    <bean class="Restaurant" id="expressTeaRestaurant">
        <constructor-arg name="hotDrink">
            <bean class="ExpressTea">
                <property name="name" value="ExpressChai"/>
            </bean>
        </constructor-arg>
    </bean>

</beans>